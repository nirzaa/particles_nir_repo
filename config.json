{
    "name": "my_model",
    "n_gpu": 1,

    "arch": {
        "type": "general_model",
        "args": {"model_type": "ResNet10", "num_classes": 3}
    },
    "data_loader": {
        "type": "data_loader",
        "args":{
            "data_dir": "D:\\local_github\\particles_nir_repo\\data\\",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "MSE_loss",
    "metrics": [
        "bias_avg", "bias_std"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "D:\\local_github\\particles_nir_repo\\saved",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 30,

        "tensorboard": true
    }
}
